#include "mbed.h"

DigitalOut Mlinksvooruit(A0);          //linker motor naar voren rijden
DigitalOut Mlinksachteruit(A1);        //linker motor naar achter rijden
DigitalOut Mrechtsvooruit(A4);         //rechter motor naar voren rijden
DigitalOut Mrechtsachteruit(A5);       //rechter motor naar achter rijden

PwmOut PWMlinks(A2);                //pwm output signaal linkerwiel
PwmOut PWMrechts(A3);               //pwm output signaal rechterwiel

Void Links() {
Mlinksvooruit=1;
Mlinksachteruit=0;
PWMlinks.period(0.001):
PWMlinks=0.3 ;
Mrechtsvooruit=1;
Mrechtsachter=0;
PWMrechts.period(0.001);
PWMrechts=0.5;

}
Void Rechts() {
}
